<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/data_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Data_collected_dir">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Data_collected_dir">


    </FrameLayout>


    <Chronometer
        android:id="@+id/cmTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected_esq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Stop"
        app:layout_constraintTop_toBottomOf="@+id/Data_Button"
        app:layout_constraintVertical_bias="0.915" />

    <TextView
        android:id="@+id/Data_collected_dir"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="data_to_collect_dir"
        app:layout_constraintBottom_toTopOf="@+id/data_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Data_collected_esq" />

    <TextView
        android:id="@+id/Data_collected_esq"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="192dp"
        android:text="data_to_collect_esq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Start_Read"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected_esq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/Data_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Dados"
        android:text="@string/dados"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected_esq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/Start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/data_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="start_map"
        android:text="Mapa"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected_esq"
        app:layout_constraintEnd_toStartOf="@+id/Start"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:onClick="Stop_read"
        android:text="Stop"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected_esq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Start"
        app:layout_constraintVertical_bias="0.0"
        android:enabled="false"/>

    <TextView
        android:id="@+id/Tempo_label"
        android:layout_width="78dp"
        android:layout_height="37dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="4dp"
        android:text="Tempo: "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected_esq"
        app:layout_constraintEnd_toStartOf="@+id/cmTimer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Stop"
        app:layout_constraintTop_toBottomOf="@+id/Data_Button" />

    <Button
        android:id="@+id/Save_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="80dp"
        android:text="Save"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected_esq"
        app:layout_constraintEnd_toStartOf="@+id/Stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_collect"
        android:onClick="save_data"/>


</androidx.constraintlayout.widget.ConstraintLayout>