<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="471dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="260dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


    </FrameLayout>

    <Button
        android:id="@+id/data_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="start_map"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Data_collected2"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="data_to_collect_dir"
        app:layout_constraintBottom_toTopOf="@+id/map_container" />

    <TextView
        android:id="@+id/Data_collected"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="data_to_collect_esq"
        app:layout_constraintBottom_toTopOf="@+id/Data_collected2" />


</androidx.constraintlayout.widget.ConstraintLayout>